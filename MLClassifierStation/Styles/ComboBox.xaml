<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ComboBox">
        <Setter Property="Height" Value="40"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Padding" Value="0,5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Validation.ErrorTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <DockPanel LastChildFill="True">
                        <Border DockPanel.Dock="Top" BorderBrush="Red" BorderThickness="2" HorizontalAlignment="Left">
                            <AdornedElementPlaceholder />
                        </Border>
                        <TextBlock DockPanel.Dock="Bottom" Foreground="Red" MaxWidth="430" TextWrapping="Wrap"
                                   Text="{Binding [0].ErrorContent}"  />
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>