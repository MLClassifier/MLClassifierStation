<UserControl x:Class="MLClassifierStation.UserControls.InfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MLClassifierStation.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="InformationControl">
    <Grid>
        <GroupBox Header="{Binding InfoTitle, ElementName=InformationControl}" Margin="5">
            <TextBlock Text="{Binding InfoContent, ElementName=InformationControl}"></TextBlock>
        </GroupBox>
    </Grid>
</UserControl>